from PyQt6.QtCore import *
from PyQt6.QtWidgets import *
from PyQt6.QtGui import *
import sys as _s

class mainWindow(QMainWindow):
    def __init__(self):
        super().__init__()
        self.flayout = QGridLayout()
        self.fwidget = QWidget()
        self.fwidget.setLayout(self.flayout)


        self.flayout.setSpacing(0)
        self.flayout.setContentsMargins(0, 0, 0, 0)

        pos = [[0,0],[0,1],[0,2],
               [1,0],[1,1],[1,2],
               [2,0],[2,1],[2,2],
               [3,1]]

        self.buttons = []
        for a, (g1, g2) in enumerate(pos):
            btn = QPushButton(str(a))
            btn.setSizePolicy(QSizePolicy.Policy.Expanding, QSizePolicy.Policy.Expanding)
            self.flayout.addWidget(btn, g1, g2)
            self.buttons.append(btn)

        self.setCentralWidget(self.fwidget)


if __name__=="__main__":
    sp = QApplication(_s.argv)
    sw = mainWindow()
    sw.show()
    _s.exit(sp.exec())

#setSizePolicy(WidthPolicy,heightPolicy) şeklinde verilir ve verildiği widget üzerinde değişiklik yapar örn; (QWidget,Qlayout) vb gibi widgetların içine karışamaz onun için içindeki widgetlara uygulanması gerekir.
